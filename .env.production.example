# ============================================
# YEMMA - PRODUCTION (VPS)
# ============================================
# Copier vers .env sur le VPS : cp .env.production.example .env
# Puis éditer les valeurs sensibles (mots de passe, clés, etc.)
#
# Génération des secrets :
#   openssl rand -hex 32   → JWT_SECRET_KEY, OAUTH2_SECRET_KEY
#   openssl rand -hex 64   → INTERNAL_SERVICE_TOKEN_SECRET
#   openssl rand -base64 24 → DB_PASSWORD, REDIS_PASSWORD, MINIO_ROOT_PASSWORD
# ============================================

APP_ENV=production
DEBUG=false

# ============================================
# DATABASE
# ============================================
# DOIT être identique pour postgres-* et tous les services
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET_KEY=CHANGE_ME_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
OAUTH2_SECRET_KEY=CHANGE_ME_openssl_rand_hex_32
INTERNAL_SERVICE_TOKEN_SECRET=CHANGE_ME_openssl_rand_hex_64

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=CHANGE_ME

# ============================================
# MINIO / S3
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME
S3_BUCKET_NAME=documents
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true
MAX_FILE_SIZE=10485760
TEMP_LINK_EXPIRE_HOURS=24

# ============================================
# CORS & URLs
# ============================================
CORS_ORIGINS=["https://yemma-solutions.com","https://www.yemma-solutions.com"]
FRONTEND_URL=https://yemma-solutions.com

# ============================================
# FRONTEND (build Docker)
# ============================================
# URL de l'API pour le build du frontend (sans trailing slash)
VITE_API_BASE_URL=https://yemma-solutions.com
VITE_PUBLIC_URL=https://yemma-solutions.com

# ============================================
# SUPER ADMIN (créé au démarrage Auth)
# ============================================
SUPER_ADMIN_EMAIL=admin@yemma.com
SUPER_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# OAUTH (Google, LinkedIn) - optionnel
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
AUTH_SERVICE_EXTERNAL_URL=https://yemma-solutions.com

# ============================================
# SMTP / EMAIL
# ============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yemma-solutions.com
SMTP_FROM_NAME=Yemma Solutions

# ============================================
# STRIPE (paiements) - optionnel
# ============================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=eur
TRIAL_DAYS=3

# ============================================
# HRFLOW.AI (parsing CV) - optionnel
# ============================================
HRFLOW_API_KEY=
HRFLOW_SOURCE_KEY=ae16505f6f0eebe3abb79ad1bf83ec53b4886432
HRFLOW_USER_EMAIL=
HRFLOW_API_URL=https://api.hrflow.ai/v1

# ============================================
# INVITATION (entreprises)
# ============================================
INVITATION_TOKEN_EXPIRE_DAYS=7
INVITATION_SECRET_KEY=CHANGE_ME
